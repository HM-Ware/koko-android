<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hmware.android.koko_demo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Kokoandroid"
        android:name=".KokoDemoApplication">
        <activity
            android:name="com.hmware.android.koko_demo.movies.list.MovieListActivity"
            android:label="@string/title_movie_list"
            android:theme="@style/Theme.Kokoandroid.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hmware.android.koko_demo.movies.details.MovieDetailActivity"
            android:label="@string/title_movie_detail"

            android:theme="@style/Theme.Kokoandroid.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hmware.android.koko_demo.movies.list.MovieListActivity" />
        </activity>
    </application>

</manifest>